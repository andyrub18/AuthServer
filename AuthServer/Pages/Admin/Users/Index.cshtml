@page
@model IndexModel
@{
}

<div class="clients-page">
    <div class="row">
        <h2>
            Registered Users
        </h2>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col">
                    <a asp-page="/Account/Register" class="btn btn-success">Add User</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table table-striped table-sm">
                <thead>
                <tr>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>User name</th>
                    <th>Email</th>
                </tr>
                </thead>

                <tbody>
                @foreach (var scope in Model.Users)
                {
                    <tr>
                        <td><span>@scope.FirstName</span></td>
                        <td><span>@scope.LastName</span></td>
                        <td><span>@scope.UserName</span></td>
                        <td><span>@scope.Email</span></td>
                    </tr>
                }
                </tbody>

            </table>
        </div>
    </div>
</div>
