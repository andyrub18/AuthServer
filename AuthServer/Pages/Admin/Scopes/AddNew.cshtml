@page
@model AddNewModel
@{
}

<div class="clients-page">
    <h2>
        Add New Scope
    </h2>


    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div class="form-group">
                    <label asp-for="InputModel.Name"></label>
                    <input class="form-control" asp-for="InputModel.Name" autofocus/>
                </div>

                <div class="form-group">
                    <label asp-for="InputModel.DisplayName"></label>
                    <input class="form-control" asp-for="InputModel.DisplayName" autofocus/>
                </div>

                <div class="form-group">
                    <label asp-for="InputModel.Description"></label>
                    <input class="form-control" asp-for="InputModel.Description" autofocus/>
                </div>

                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Save Changes</button>
                    <a class="btn btn-secondary" asp-page="/Admin/Scopes/Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}