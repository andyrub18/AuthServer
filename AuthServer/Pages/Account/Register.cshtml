@page
@model Register
@{
}

<h3>User Registration</h3>
<br/>
<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="Model.FirstName"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Model.FirstName" class="form-control"/>
                <span class="text-danger" asp-validation-for="Model.FirstName"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="Model.LastName"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Model.LastName" class="form-control"/>
                <span class="text-danger" asp-validation-for="Model.LastName"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="Model.UserName"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Model.UserName" class="form-control"/>
                <span class="text-danger" asp-validation-for="Model.UserName"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="Model.Email"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Model.Email" class="form-control"/>
                <span class="text-danger" asp-validation-for="Model.Email"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="Model.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="Model.Password" class="form-control"/>
                <span class="text-danger" asp-validation-for="Model.Password"></span>
            </div>
        </div>
        @if (User.Identity?.IsAuthenticated == true)
        {
            <div class="mb-3 row">
                <div class="col-2">
                    <label asp-for="Model.Roles"></label>
                </div>
                <div class="col-5">
                    <select asp-for="Model.Roles" class="form-select" multiple
                            aria-label="multiple select example" asp-items="@Model.AvailableRoles">
                        <option disabled value="">-- Select the roles of the new user --</option>
                    </select>
                    <span class="text-danger" asp-validation-for="Model.Roles"></span>
                </div>
            </div>
        }
        <div class="mb-3 row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Register"/>
            </div>
            <div class="col-5">
            </div>
        </div>
    </form>
</div>